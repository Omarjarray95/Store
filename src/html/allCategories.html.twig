{% extends "/index.html.twig" %}

{% block body %}
    <h1>List Of Categories</h1>

    <table border="2">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        {{ category.name }}
                    </td>
                    <td>
                        {{ category.description }}
                    </td>
                    <td>
                        <a href="/BookStore/updateCategories/{{ category.code }}">
                            <button>Update</button>
                        </a>
                    </td>
                    <td>
                        <a href="/BookStore/deleteCategory/{{ category.code }}">
                            <button>Delete</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}