{% extends "/index.html.twig" %}

{% block body %}
    <h1>Add New Category</h1>

    <form action="/BookStore/addCategory" method="post">
        <table>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    <input name="name" type="text">
                </td>
            </tr>
            <tr>
                <td>
                    Description
                </td>
                <td>
                    <textarea rows="4" name="description">
                    </textarea>
                </td>
            </tr>
            <tr>
                <td>

                </td>
                <td>
                    <input value="Add" type="submit">
                </td>
            </tr>
        </table>
    </form>

    <span>{{ error_message }}</span>
{% endblock %}