{% extends "/index.html.twig" %}

{% block body %}
    <h1>Update Category</h1>

    <form action="/BookStore/updateCategory/{{ category.code }}" method="post">
        <table>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    <input value="{{ category.name }}" name="name" type="text">
                </td>
            </tr>
            <tr>
                <td>
                    Description
                </td>
                <td>
                    <textarea rows="4" name="description">{{ category.description }}</textarea>
                </td>
            </tr>
            <tr>
                <td>

                </td>
                <td>
                    <input value="Update" type="submit">
                </td>
            </tr>
        </table>
    </form>

    <span>{{ error_message }}</span>
{% endblock %}